header
  display inline-block
  clear both
  width 100%
  padding 60px
  box-sizing border-box
  h4
    float left
    font-weight 100
    margin-top 21px
  .control-bar
    float right

#pub-wrap
  margin-left 275px

#pub-body
  padding 60px

#pub-list
  margin 0

.pub
  width 200px
  height 300px
  border 1px solid #ccc
  float left
  margin 20px
  font-size 12px
  text-align center
  position relative
  &:hover
    .pub-li-menu
      display block

.pub-li-wrap
  width 200px
  height 300px
  line-height 280px
  position absolute
  z-index 998
  top 0
  bottom 0
  right 0
  left 0

.pub-li-menu
  display none
  position absolute
  top 0
  bottom 0
  right 0
  left 0
  width 200px
  height 300px
  background black
  z-index 999
  ul
    margin-top 50%
  button
    width 80%
    margin 5px

.header-wrap
  border-bottom 1px solid #c0c0c0
  height 75px